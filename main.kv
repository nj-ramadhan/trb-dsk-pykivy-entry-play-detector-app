#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_home.kv
#:include screen_login.kv
#:include screen_main.kv
#:include screen_gate_control.kv
#:include screen_play_detect.kv

# ScreenManager:
<RootScreen>:
    id: screen_manager
    transition: NoTransition()
    
    ScreenHome:
        id: screen_home
        name: 'screen_home'
        screen_manager: screen_manager

    ScreenLogin:
        id: screen_login
        name: 'screen_login'
        screen_manager: screen_manager

    ScreenMain:
        id: screen_main
        name: 'screen_main'
        screen_manager: screen_manager

    ScreenGateControl:
        id: screen_gate_control
        name: 'screen_gate_control'
        screen_manager: screen_manager   

    ScreenPlayDetect:
        id: screen_play_detect
        name: 'screen_play_detect'
        screen_manager: screen_manager   

